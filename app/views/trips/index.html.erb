<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Depart city</th>
      <th>Depart time</th>
      <th>Arrival city</th>
      <th>Arrival time</th>
      <th>Free seat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.depart_city %></td>
        <td><%= trip.depart_time %></td>
        <td><%= trip.arrival_city %></td>
        <td><%= trip.arrival_time %></td>
        <td><%= trip.free_seat %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

