<p id="notice"><%= notice %></p>

<p>
  <strong>Depart city:</strong>
  <%= @trip.depart_city %>
</p>

<p>
  <strong>Depart time:</strong>
  <%= @trip.depart_time %>
</p>

<p>
  <strong>Arrival city:</strong>
  <%= @trip.arrival_city %>
</p>

<p>
  <strong>Arrival time:</strong>
  <%= @trip.arrival_time %>
</p>

<p>
  <strong>Free seat:</strong>
  <%= @trip.free_seat %>
</p>

<p>
  <% if user_signed_in? %>
    <%= form_for(current_user.tickets.build(trip_id: @trip.id)) do |f| %>
      <div><%= f.hidden_field :trip_id %></div>
      <div class="actions"><%= f.submit "Buy" %></div>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
